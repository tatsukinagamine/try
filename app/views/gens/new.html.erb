<p id="notice"><%= notice %></p>

<%= form_for(@gen,url: confirm_gens_path) do |f| %>
  <% if @gen.errors.any? %>
    <div id="error_explanation">
      <h2><%= @gen.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @gen.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <%= f.label :本文 %>
  <%= f.text_field :content,class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

  </div>
</div>
<%= link_to "ツイッター一覧画面にもどる", gens_path %>